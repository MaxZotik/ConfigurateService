            <!--<TextBox x:Name="tbxAverageValue" Style="{StaticResource tbxAverage}"/>-->
            <!--</WrapPanel>-->
            <!--<WrapPanel>-->
                <!--<TextBlock Text="Коэфициент границы прореживания:" TextWrapping="Wrap" Width="200"/>-->
                <!--<TextBox x:Name="tbxAverageEnd" Style="{StaticResource tbxAverage}"/>-->
            <!--</WrapPanel>-->
            <Button Name="btnSave" Style="{StaticResource BtnConfig}">
                <WrapPanel>
                    <Image Source="/Resources/report.png" Style="{StaticResource Img}"/>
                    <TextBlock Text="Сохранить"/>
                </WrapPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>

