<Page x:Class="ConfigurateService.Pages.DatabasePage.SelectDatabaseSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConfigurateService.Pages.DatabasePage"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="400"
      Title="SelectDatabaseSettingsPage">

    <Grid>
        <Grid Grid.Row="1" Panel.ZIndex="-1" Background="FloralWhite"/>
        <StackPanel>
            <Button Name="btnSettingsNew" Width="275">
                <WrapPanel>
                    <Image Source="/Resources/test.png" Style="{StaticResource Img}"/>
                    <TextBlock Text="Настроить новую БД"/>
                </WrapPanel>
            </Button>
            <Button Name="btnSettingsCurrent" Width="275">
                <WrapPanel>
                    <Image Source="/Resources/test.png" Style="{StaticResource Img}"/>
                    <TextBlock Text="Редактировать настройки БД"/>
                </WrapPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
